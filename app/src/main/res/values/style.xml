<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackgroundStyle">
        <item name="android:background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="CalculatorButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">67dp</item>
    </style>

    <style name="FunctionButtonStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">67dp</item>
    </style>

    <style name="ResultStyle">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextViewStyleResult">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/almost_black</item>
    </style>

</resources>